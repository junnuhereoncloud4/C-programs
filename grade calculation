#include<stdio.h>
int main()
{
    int s1,s2,s3,avg;
    printf("enter s1,s2 and s3 values\n");
    scanf("%d%d%d",&s1,&s2,&s3);        
    avg=(s1+s2+s3)/3;
    if(s1>=40 && s2>=40 && s3>=40)
    {
        if(avg>=90)
        {
             printf("A grade");
        }
        else if(avg>=70)
        {
             printf("B grade");
        }
        else if(avg>=50)
        {
             printf("C grade");
        }
         else if(avg>=40)
        {
             printf("D grade");/* code */
        }
    }
    else
    {
        printf("fail");
    }
    
    return 0;
}   
